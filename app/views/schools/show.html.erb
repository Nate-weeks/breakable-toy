<% if @user.school_id != @school.id || @user.school_approval != true %>
  <h1>you must join this school and be approved before you can view classroom information</h1>
<% else %>

  <div class="new-classroom">
    <%= link_to "Create a new classroom", new_school_classroom_path(params[:id]), class: "button large" %>
  </div>
  <% if @users_waiting_for_approval %>
    <% @users_waiting_for_approval.each do |user| %>
      <%= user.first_name %> <%= user.last_name %>
      <%= button_to 'approve user', update_school_approval_school_user_path(@school, user.id), method: :patch %>
    <% end %>
  <% end %>
  <h1 class="school-name"><%= @school.name %></h1>
  <h2 class="school-description"><%= @school.description %></h2>

  <% if @user.id == @school.creator_id %>
      <%= link_to 'Edit School', edit_school_path(@school)%>
      <%= link_to 'Delete School', school_path(@school), method: :delete, data: {confirm: 'Are you sure you wanna delete this school?'} %>
      <% @school.users.each do |user| %>
        <p><%= user.first_name %> <%= user.last_name %> <%= link_to 'Remove User', school_user_path(@school, user), method: :delete, data: {confirm: 'Are you sure you wanna remove this user from your school>'} %></p>
          <% end %>
    <% end %>

    <div class="grid-x">
    <% @classrooms.each do |classroom|%>
      <div class="small-3 cell">
        <h3>Classroom: <%= link_to classroom.name, school_classroom_path(@school, classroom.id) %></h3>
        <% if @user.classroom_id != classroom.id %>
          <%= button_to 'Join Classroom', update_number_two_school_classroom_user_path(@school, classroom, @user), method: :patch %>
        <% end %>
        <h4>Description: <%= classroom.description %></h4>
      </div>
        <% end %>

      <% end %>
    </div>
